%%% -*- mode: erlang; -*-
{erl_opts,
 [
  debug_info
 ]
}.

{deps,
 [
  {cowboy,  "2.8.0"},
  {ranch,   "2.0.0"}
 ]
}.

{project_plugins,
 [
  {rebar3_lint, "0.4.0"}
 ]
}.

{profiles, [
            {test, [
                    {cover_enabled, true},
                    {cover_opts, [verbose]},
                    {deps, [
                            {katana_test, "1.0.1"},
                            {mixer, "1.1.1", {pkg, inaka_mixer}},
                            {meck, "0.9.2"},
                            {xref_runner, "1.2.0"}
                           ]}
                   ]}
           ]}.

{xref_checks,
  [
    undefined_function_calls
  , locals_not_used
  , deprecated_function_calls
  ]
}.

{dialyzer, [ {warnings, [ underspecs
                        , unmatched_returns
                        , error_handling
                        , unknown
                        ]}
           , {plt_apps, top_level_deps}
           , {plt_extra_apps, []}
           , {plt_location, local}
           , {base_plt_apps, [erts, stdlib, kernel]}
           , {base_plt_location, global}]}.
