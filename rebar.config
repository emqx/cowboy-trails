%%% -*- mode: erlang; -*-
{erl_opts,
 [
  {src_dirs, ["src"]}
 ]
}.

{deps_dir, "deps"}.
{deps,
 [
  {cowboy,  "2.3.0"}
 ]
}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{profiles, [
            {test, [
                    {deps, [
                            {katana_test, "1.0.0"},
                            {mixer, "1.0.0", {pkg, inaka_mixer}},
                            {meck, "0.8.9"},
                            {xref_runner, "1.1.0"}
                           ]}
                   ]}
           ]}.

{xref_warnings, true}.
{xref_checks,
  [
    undefined_function_calls
  , locals_not_used
  , deprecated_function_calls
  , deprecated_functions
  ]
}.
